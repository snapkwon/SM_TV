<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aus__dialog_background"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/aus__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/aus__feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="#FF525252"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/aus__time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:textColor="#484848"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aus__ignore"
            style="@style/aus__button"
            android:layout_weight="1"
            android:background="@drawable/aus__button_orange_light"
            android:text="@string/aus__ignore" />

        <Button
            android:id="@+id/aus__update"
            style="@style/aus__button"
            android:layout_weight="1"
            android:background="@drawable/aus__button_orange"
            android:text="@string/aus__update" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/aus__only_wifi"
        style="@style/aus__checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/aus__later_on_wifi"
        android:textColor="#FF525252"
        android:textSize="14sp" />

</LinearLayout>